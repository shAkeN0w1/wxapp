 <scroll-view scroll-y class="scrollPage">
  <view class="UCenter-bg" >
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
    <view class="text-xxl">您好！
      <text class="text-xl">{{userInfo.nickName}}</text>
    </view>
    <view class="margin-top-sm">
      <text class="text-xxl text-white">以下是您今天的服药信息</text>
    </view>
    <image src="../../images/wave.gif" mode="scaleToFill" class="gif-wave"></image>
  </view>
  <view class="padding flex text-center text-grey bg-white shadow-warp">
    <view class="flex flex-sub flex-direction solid-right">
      <view class="text-xxl text-orange">{{visitTotal}}</view>
      <view class="margin-top-sm">
        <text class="cuIcon-attentionfill"></text>药盒状态</view>
    </view>
    <view class="flex flex-sub flex-direction solid-right">
      <view class="text-xxl text-blue">{{starCount}}</view>
      <view class="margin-top-sm">
        <text class="cuIcon-favorfill"></text>老人绑定</view>
    </view>
    <view class="flex flex-sub flex-direction">
      <view class="text-xxl text-green">{{forksCount}}</view>
      <view class="margin-top-sm">
        <text class="cuIcon-fork"></text>联系我们</view>
    </view>
  </view>
  </scroll-view>



  <view class="cu-bar bg-white margin-top solid-bottom">
    <view class="action">
      <text class="cuIcon-title text-blue"></text>
      {{showNothing?'今日无服药信息':'今日服药信息'}}
    </view>
    <view class="action"></view>
  </view>
  <block wx:if="{{!showNothing}}">
    <view class="bg-white padding">
      <view class="grid col-3 margin-bottom text-center" >
        <view class="bg-{{formColorArray[index]}} padding text-xl" wx:for="{{showArray}}" wx:key='a'>
          <text class="text-{{showArray[index]=='未服药'?'red':'white'}}">{{showArray[index]}}</text> 
        </view>
      </view>
    </view>
  </block>


