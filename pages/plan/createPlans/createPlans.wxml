
<view class="cu-form-group margin-top">
		<view class="title">请选择本次服药计划共几类药物</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
			<view class="picker">
				{{index?picker[index]:'上限为8种'}}
			</view>
		</picker>
	</view>
<view wx:if="{{index != null}}">
  <view wx:for="{{array}}"> 
  <block>
  	<view class="cu-form-group">
		<view class="title">药物</view>
		<input placeholder="药名"></input>
	</view>
  </block>
      <view class="cu-form-group">
		    <view class="title">日期选择</view>
		      <picker mode="date" value="{{data1}}" start="2015-09-01" end="2020-09-01" bindchange="DateChange">
        <view class="picker">
				{{data1}}</view>
        </picker>
	</view>
  <view class="cu-form-group">
		<view class="title">服药天数</view>
		<input placeholder="1~7天"></input>
	</view>
  	<view class="cu-form-group">
		<view class="title">饭前吃</view>
		<switch></switch>
	</view>
  <view class="cu-form-group">
		<view class="title">每天顿数</view>
		<input placeholder="0~5顿"></input>
	</view>
 <view class="cu-form-group">
		<view class="title">每顿数量</view>
		<input placeholder=""></input>
	</view>
  <view>
  
  </view>
   </view>
  </view>
  <view class="padding flex flex-direction">
  <button class="cu-btn bg-red margin-tb-sm lg" bindtap="SM">提交</button>
</view>
